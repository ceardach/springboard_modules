/**
 * Implementation of hook_requirements().
 */
function secure_prepopulate_requirements($phase) {
  $severity = REQUIREMENT_ERROR;
  
  // check for mcrypt extension
  if (extension_loaded("mcrypt")) {
    $severity = REQUIREMENT_OK;
  }
  
  $requirements = array(
    array(
      'title' => t('Secure pre-populate'),
      'description' => t('The Secure pre-populate module requires the PHP Mcrypt extension has to be installed on the web server.'),
      'severity' => $severity,
    ),
  );
  
  return $requirements;
}

